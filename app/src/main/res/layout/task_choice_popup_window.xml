<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/add_tasks_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <Button
        android:id="@+id/add_random"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Выдать случайное"
        android:textAlignment="center"
        android:layout_marginEnd="8dp"
        android:radius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/create_new"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/create_new"
        android:layout_width="180dp"
        android:layout_marginStart="8dp"
        android:layout_height="wrap_content"
        android:text="Создать свое"
        android:textAlignment="center"
        android:radius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/add_random"
        app:layout_constraintTop_toTopOf="parent" />


</LinearLayout>